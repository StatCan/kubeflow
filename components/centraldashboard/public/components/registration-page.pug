iron-ajax#MakeNamespace(method='POST', url='/api/workgroup/create', handle-as='json', last-error='{{error}}', last-response='{{resp}}',
    content-type='application/json', loading='{{submittingWorkgroup}}', on-input='clearInvalidation')
iron-ajax#GetMyNamespace(url='/api/workgroup/exists', handle-as='json')
paper-card#MainCard
    figure#Logo !{logo}
    neon-animated-pages.Main-Content(selected='[[page]]',
            entry-animation='fade-in-animation',
            exit-animation='fade-out-animation')
        neon-animatable
            h2 {{localize('lblWelcome')}}
            aside {{localize('registrationDesc')}}
            .actions
                paper-button(on-click='nextPage') {{localize('btnStartSetup')}}
        neon-animatable
            h2 {{localize('lblNamespace')}}
            aside {{localize('lblNamespaceDesc')}}
            md2-input#Namespace(label="{{localize('lblNamespaceName')}}", value='{{namespaceName}}', allowed-pattern='[[_namespaceValidationRegex]]',
                error='[[error.response.error]]', disabled='[[submittingWorkgroup]]', maxlength=253)
            iron-a11y-keys#keys(target='[[namespaceInput]]', keys='enter', on-keys-pressed='finishSetup')
            .actions
                paper-button(on-click='finishSetup', disabled='[[or(submittingWorkgroup, waitForRedirect)]]') {{localize('btnFinish')}}
                paper-button(on-click='backPage', disabled='[[submittingWorkgroup]]') {{localize('btnBack')}}
    carousel-indicator(size=2, selected='{{page}}')

nav#Links
    a(href='https://github.com/kubeflow/kubeflow', tabindex='-1', target="_blank") {{localize('linkGitHub')}}
    a(href='https://www.kubeflow.org/docs/about/kubeflow/', tabindex='-1', target="_blank") {{localize('linkDocumentation')}}
    a(href='https://policies.google.com/privacy', tabindex='-1', target="_blank") {{localize('linkPrivacy')}}
